<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://test.com/" targetNamespace="http://test.com/" elementFormDefault="qualified">
     <xsd:include schemaLocation="complexType.xsd"/>
     <xsd:complexType name="Movie">
          <xsd:sequence>
               <xsd:element name="movieName" minOccurs="0" maxOccurs="1">
                    <xsd:simpleType>
                         <xsd:restriction base="xsd:string">
                              <xsd:maxLength value="500"/>
                         </xsd:restriction>
                    </xsd:simpleType>
               </xsd:element>
               <xsd:element name="actorName" minOccurs="0" maxOccurs="1">
                    <xsd:simpleType>
                         <xsd:restriction base="xsd:string">
                              <xsd:maxLength value="500"/>
                         </xsd:restriction>
                    </xsd:simpleType>
               </xsd:element>
                <xsd:element name="actressName" minOccurs="0" maxOccurs="1">
                    <xsd:simpleType>
                         <xsd:restriction base="xsd:string">
                              <xsd:maxLength value="500"/>
                         </xsd:restriction>
                    </xsd:simpleType>
               </xsd:element>
                <xsd:element name="genres" minOccurs="0" maxOccurs="1">
                    <xsd:simpleType>
                         <xsd:restriction base="xsd:string">
                              <xsd:maxLength value="500"/>
                         </xsd:restriction>
                    </xsd:simpleType>
               </xsd:element>
          </xsd:sequence>
     </xsd:complexType>
</xsd:schema>
